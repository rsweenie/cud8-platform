{#
/**
 * @file
 * Displays the generic content layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{% if content %}
  <section {{ attributes.addClass('layout--generic-content','section','slash') }}>
    <div class="row ha-center">
      <div class="col-xs-12 col-md-10 col-lg-7">
        {% if content.main %}
          <div {{ region_attributes.main.addClass('layout__region', 'layout__region--main') }}>
            {{ content.main }}
          </div>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}
