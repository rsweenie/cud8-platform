{#
/**
 * @file
 * Default theme file to display a hub_resource item.
 *
 * Available variables:
 * - content: hub resource content.
 *
 * @see template_preprocess_hub_resource()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'hub-resource',
  'hub-resource--type-' ~ resource_type|clean_class,
]
%}
<article {{ attributes.addClass(classes) }}>
  {% if content %}
    {% if content.field_hub_stat_highlight_link.0['#url'] is not empty %}
      <a href="{{ content.field_hub_stat_highlight_link.0['#url'] }}" {{ content.field_hub_stat_highlight_link.0['#url'].getOption('attributes') }}>
    {% endif %}
      {{ content.field_hub_stat_highlight_image }}
    {% if content.field_hub_stat_highlight_link.0['#url'] is not empty %}
      </a>
    {% endif %}
  {% endif %}
</article>
