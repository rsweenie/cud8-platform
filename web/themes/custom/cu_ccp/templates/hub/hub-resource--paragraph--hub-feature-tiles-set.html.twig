{#
/**
 * @file
 * Default theme file to display a hub_resource item.
 *
 * Available variables:
 * - content: hub resource content.
 *
 * @see template_preprocess_hub_resource()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'hub-resource',
  'hub-resource--type-' ~ resource_type|clean_class,
]
%}
{% block resource %}
<section class="section feat-tiles-section">
  <div{{ attributes.addClass(classes) }}>
    {% if content.field_hub_feature_tiles_ref %}
    <div class="feat-tiles">
      {{ content.field_hub_feature_tiles_ref }}
    </div>
    {% endif %}
  </div>
</section>
{% endblock resource %}
