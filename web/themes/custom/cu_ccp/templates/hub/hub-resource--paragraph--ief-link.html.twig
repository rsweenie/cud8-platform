{#
/**
 * @file
 * Default theme file to display a hub_resource item.
 *
 * Available variables:
 * - content: hub resource content.
 *
 * @see template_preprocess_hub_resource()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'hub-resource',
  'hub-resource--type-' ~ resource_type|clean_class,
]
%}
<article{{ attributes.addClass(classes) }}>
  {% if content.field_internal_or_external_link %}
    {{ content.field_internal_or_external_link }}
  {% endif %}
  {% if content.field_open_in_new_window %}
    {{ content.field_open_in_new_window }}
  {% endif %}
  {% if content.field_file_link %}
    {{ content.field_file_link }}
  {% endif %}
  {% if content.field_link_text %}
    {{ content.field_link_text }}
  {% endif %}
</article>
