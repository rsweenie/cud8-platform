{#
/**
 * @file
 * Default theme file to display a hub_resource item.
 *
 * Available variables:
 * - content: hub resource content.
 *
 * @see template_preprocess_hub_resource()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
  'hub-resource',
  'hub-resource--type-' ~ resource_type|clean_class,
  'quote-box'
]
%}
<article {{ attributes.addClass(classes) }}>
  {% if content %}
    {% include '@cu2019_grad/components/quote.html.twig' with {
      'class': resource_obj.field_hub_quote_style.getString()|clean_class,
      'quote': content.field_hub_quote_text,
      'img': content.field_hub_quote_image,
      'name': content.field_hub_quote_source_name,
      'title': content.field_hub_quote_source_title,
      'area': content.field_hub_quote_background_area,
    } %}
  {% endif %}
</article>
