{#
/**
 * @file
 * Default theme file to display a hub_resource item.
 *
 * Available variables:
 * - content: hub resource content.
 *
 * @see template_preprocess_hub_resource()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'hub-resource',
    'hub-resource--type-' ~ resource_type|clean_class,
  ]
%}
<article{{ attributes.addClass(classes) }}>
  {% if content.field_video_media %}
    {{ content.field_video_media }}
    {{ content.field_video_caption }}
  {% endif %}
</article>
